# Environment Variables for Planning Center Worship Dashboard

# Server Configuration
NODE_ENV=development
PORT=8000
SESSION_SECRET=your_very_secure_session_secret_change_this_in_production

# Planning Center OAuth Configuration
# Get these values by registering your app at: https://api.planningcenteronline.com/oauth/applications
PC_CLIENT_ID=your_planning_center_client_id
PC_CLIENT_SECRET=your_planning_center_client_secret
PC_REDIRECT_URI=http://localhost:8000/auth/callback

# Application URLs
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:8000

# Cache Configuration (optional - uses in-memory cache if not set)
# REDIS_URL=redis://localhost:6379

# Logging Level
LOG_LEVEL=debug
